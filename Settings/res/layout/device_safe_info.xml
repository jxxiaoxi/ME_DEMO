<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_product_name"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/device_safety_product_name_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_product_name_summary"
                android:textSize="13dip" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_manufacturer_name"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/device_safety_manufacturer_name_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_manufacturer_name_summary"
                android:textSize="13dip" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:orientation="vertical" 
	    android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_manufacturer_address"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/device_safety_manufacturer_name_address_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_manufacturer_name_address_summary"
                android:textSize="13dip" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" >
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:text="@string/device_safety_address"
            android:textSize="18dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_imei"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/device_safety_imei_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_imei_summary"
                android:textSize="13dip" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_cu"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/device_safety_cu_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_cu_summary"
                android:textSize="13dip" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" >
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_blu"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/device_safety_blu_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_safety_blu_summary"
                android:textSize="13dip" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#000000" >
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:text="@string/device_safety_info"
            android:textSize="13dip" />

        <ImageView
            android:id="@+id/safety_ic_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dip"
            android:src="@drawable/safety_ic_1" />

        <ImageView
            android:id="@+id/safety_ic_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dip"
            android:src="@drawable/safety_ic_2" />

        <ImageView
            android:id="@+id/safety_ic_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dip"
            android:src="@drawable/safety_ic_3" />

        <ImageView
            android:id="@+id/safety_ic_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dip"
            android:src="@drawable/safety_ic_4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_gravity="center"
            android:text="@string/device_safety_info_1"
            android:textSize="18dip" 
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/safety_ic_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dip"
            android:src="@drawable/safety_ic_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:layout_gravity="center"
            android:text="@string/device_safety_info_2"
            android:layout_marginBottom="30dip"
            android:textSize="15dip" />
    </LinearLayout>

</ScrollView>
